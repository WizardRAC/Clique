{
    "apps": [
      {
        "name": "clique-worker",
        "script": "start_worker.py",
        "interpreter": "python3",
        "instances": 1,
        "exec_mode": "fork",
        "autorestart": true,
        "watch": false,
        "max_memory_restart": "4G",
        "env": {
          "PYTHONUNBUFFERED": "1"
        },
        "error_file": "logs/worker-error.log",
        "out_file": "logs/worker-out.log",
        "log_date_format": "YYYY-MM-DD HH:mm:ss Z",
        "merge_logs": true,
        "min_uptime": "10s",
        "max_restarts": 10,
        "restart_delay": 4000
      }
    ]
  }
  